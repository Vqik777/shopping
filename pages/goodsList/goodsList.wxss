.goodsDetails .tabs1 {
  height: calc(100vh - 150rpx);
}
.goodsDetails .tabs1 .goodsItem {
  display: flex;
}
.goodsDetails .tabs1 .goodsItem .imageWrapper {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goodsDetails .tabs1 .goodsItem .imageWrapper image {
  width: 80%;
}
.goodsDetails .tabs1 .goodsItem .infoWrapper {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goodsDetails .tabs1 .goodsItem .infoWrapper .name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodsDetails .tabs1 .goodsItem .infoWrapper .price {
  color: #fa5478;
}
